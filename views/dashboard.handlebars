<section>
  <h2>Create a New Post</h2>

  <form class="post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <textarea name="post-text" id="post-text-textarea"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{!-- if there are posts in the db passed to this view, display them --}}
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{!-- for each post, use post partial to display info --}}
    {{#each posts as |post|}}
    <li>
      {{!-- send to post-info partial --}}
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

{{!-- functionality for create post button --}}
<script src="/javascript/create-post.js"></script>